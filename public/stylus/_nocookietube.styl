*
    margin 0
    padding 0
    box-sizing border-box
    overflow-x hidden
    &::-webkit-scrollbar
        display none

body
    background-color #1a1a1a
    & .navbar
        display flex
        justify-content center
        gap 32px
        align-items center
        background-color mix(#1a1a1a, #2c2c2c)
        border-bottom 3px solid #f1f1f1
        width 100%
        height 18vh
        & .controls
            display flex
            justify-content center
            gap 20px
            padding 8px
            align-items center
            background-color transparent
            border-bottom none
            height 100%
            width 20%
            div
                display flex
                justify-content center
                align-items center
                padding 7px
                background-color inherit
                width 100px
                height 100px
                &:hover
                    transform scale(+1.09)
        & .form
            display flex
            justify-content center
            gap 0px
            align-items center
            padding 5px
            background-color transparent
            border-bottom none
            height 100%
            width 70%
            .input
                display flex
                justify-content center
                align-items center
                width 69%
                height 100%
                input
                    display block
                    padding-left 30px
                    height 63%
                    width 72%
                    background-color mix(#1c1c1c, #333333)
                    border 3.5px solid #f1f1f1
                    outline none
                    border-top-left-radius 29px
                    border-bottom-left-radius 29px
                    border-top-right-radius 0px
                    border-bottom-right-radius 0px
                    transition 0.3s ease
                    color #d4d0d0
                    font-size 14px
                    font-weight 400
                    font-family "Open Sans", sans-serif
                button
                    display block
                    height 63%
                    width 20%
                    background-color #222222
                    border-bottom 3.5px solid #f1f1f1
                    border-left none
                    border-right 3.5px solid #f1f1f1
                    border-top 3.5px solid #f1f1f1
                    outline none
                    border-top-left-radius 0px
                    border-bottom-left-radius 0px
                    border-top-right-radius 29px
                    border-bottom-right-radius 29px
                    color #d4d0d0
                    font-size 16px
                    font-weight 400
                    font-family "Open Sans", sans-serif
                    &:hover
                        background-color mix(#222222, #1a1a1a)
    & .theater
        display none
        justify-content center
        align-items center
        width 100%
        height calc(100vh - 18vh)
        .player
            display flex
            width 100%
            height 100%
            #player
                display flex
                width 100%
                height 100%
                iframe
                    display none
                    border none
                    outline none
                    width 100%
                    height 100%